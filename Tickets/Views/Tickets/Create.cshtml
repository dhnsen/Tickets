@model Tickets.Models.TicketFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<br />
@using (Html.BeginForm("Create", "Tickets"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Summary)
        @Html.TextBoxFor(m => m.Summary, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TicketTypes)
        @Html.DropDownListFor(m => m.TicketTypes, new SelectList(Model.TicketTypes, "Id", "Name"), "", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}
