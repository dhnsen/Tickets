@model ServiceManagement.ViewModels.TicketFormViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Tickets"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer)
        @Html.DropDownListFor(m => m.Customer, new SelectList(Model.Customers, "Id", "Name"), "", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Summary)
        @Html.TextBoxFor(m => m.Summary, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Description) <br />
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @cols = 80, @rows = 5, @style = "resize: none;" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}